{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://etos.readthedocs.io",
    "title": "ETOS TERCC",
    "description": "The ETOS TERCC schema definition. All ETOS TERCCS must be validated by this schema.",
    "type": "array",
    "minItems": 1,
    "items": {
        "description": "Each collection shall be a single test suite executed through ETOS.",
        "type": "object",
        "properties": {
            "name": {
                "description": "The name of this particular collection.",
                "type": "string"
            },
            "priority": {
                "description": "The priority of execution for this collection.",
                "type": "integer"
            },
            "recipes": {
                "description": "Each recipe is a single test case.",
                "type": "array",
                "minItems": 1,
                "items": {
                    "description": "Describes the constraints and test case information.",
                    "type": "object",
                    "properties": {
                        "constraints": {
                            "description": "An array of constraints that are required for ETOS to know what and how to execute this test.",
                            "type": "array",
                            "allOf": [
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "ENVIRONMENT"
                                            },
                                            "value": {
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                },
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "CHECKOUT"
                                            },
                                            "value": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                },
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "COMMAND"
                                            },
                                            "value": {
                                                "type": "string"
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                },
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "TEST_RUNNER"
                                            },
                                            "value": {
                                                "type": "string"
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                },
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "EXECUTE"
                                            },
                                            "value": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                },
                                {
                                    "contains": {
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "const": "PARAMETERS"
                                            },
                                            "value": {
                                                "type": "object"
                                            }
                                        },
                                        "required": ["key", "value"],
                                        "additionalProperties": false
                                    }
                                }
                            ],
                            "minItems": 6,
                            "maxItems": 6,
                            "uniqueItems": true
                        },
                        "id": {
                            "type": "string",
                            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                        },
                        "testCase": {
                            "type": "object",
                            "properties": {
                                "tracker": {
                                    "type": "string"
                                },
                                "id": {
                                    "type": "string"
                                },
                                "version": {
                                    "type": "string"
                                },
                                "uri": {
                                    "type": "string"
                                },
                                "url": {
                                    "description": "TODO: remove this!",
                                    "deprecated": true,
                                    "type": "string"
                                }
                            },
                            "required": [
                                "id"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": ["constraints", "id", "testCase"],
                    "additionalProperties": false
                }
            }
        },
        "required": ["name", "priority", "recipes"],
        "additionalProperties": false
    }
}